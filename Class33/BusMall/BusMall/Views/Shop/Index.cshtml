@model IEnumerable<BusMall.Models.Product>
@{
    Layout = "_HomePage";
    var counter = 0;
}



<div class="container">

        @for (int i = 0; i < Model.Count(); i += 3)
        {
            <div class="row">
                @foreach (var item in Model.Skip(i).Take(3))
                {
                    <div class="col-md-4">
                        <a href="@Html.DisplayFor(modelItem => item.Name)">
                            <img class="img-responsive" src="@item.Image" alt="">
                        </a>
                        <h3>
                            <a href="shop/details/@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                        </h3>
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                }
            </div>
        }


    @*</div>*@

</div>
